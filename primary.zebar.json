{
  "$schema": "https://github.com/glzr-io/zebar/raw/v2.4.0/resources/widget-schema.json",
  "htmlPath": "./index.html",
  "zOrder": "normal",
  "shownInTaskbar": false,
  "focused": false,
  "resizable": false,
  "transparent": true,
  "caching": {
    "defaultDuration": 0,
    "rules": []
  },
  "privileges": {
    "shellCommands": [
      {
        "program": "powershell",
        "argsRegex": "-Command Start-Process ms-settings:network-status"
      },
      {
        "program": "powershell",
        "argsRegex": "-Command Start-Process bingweather://"
      },
      {
        "program": "powershell",
        "argsRegex": "-Command Start-Process taskmgr"
      },
      {
        "program": "powershell",
        "argsRegex": "-Command Start-Process ms-settings:powersleep"
      }
    ]
  },
  "presets": [
    {
      "name": "default",
      "anchor": "top_center",
      "offsetX": "0px",
      "offsetY": "0px",
      "width": "100%",
      "height": "40px",
      "monitorSelection": {
        "type": "all"
      },
      "dockToEdge": {
        "enabled": false,
        "edge": null,
        "windowMargin": "0px"
      }
    }
  ]
}
